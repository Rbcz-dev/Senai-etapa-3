def restaurante():
    print('RESTAURANTE RJFAÇA O SEU PEDIDO: DIGITE Para 1 Lasanha - 2 Strogonoff - 3 PF(prato feito)  - 4 Açaí ')
opcao = input('>>')
if opcao == '1':
        print('Você escolheu Lasanha') 
elif opcao == '2':
        print('Você escolheu Strogonoff')  
elif opcao == '3':
        print('Você escolheu PF(prato feito)')  
elif opcao == '4':
        print('Você escolheu Açaí')
else:
        print('Você não leu o cadrdápio lenda,rala por gentileza lerdão ') 

restaurante()








   
